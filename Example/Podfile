source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '11.0'

use_frameworks!
inhibit_all_warnings!

target 'RepositoryExample' do
  pod 'SwiftRepository', :path => '../'

  pod 'RealmSwift'
  pod 'PromiseKit/CorePromise'
  pod 'KeychainSwift'
  pod 'AlamofireObjectMapper'
  pod 'Firebase/RemoteConfig'
  
  target 'RepositoryExampleTests' do
    inherit! :search_paths

    pod 'Nimble'
    pod 'Quick'
  end
end
